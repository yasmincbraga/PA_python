        "\n",
        "  if len(guesswhat) != 5:\n",
        "    print(f\"A palavra deve ter cinco letras. essa palavra tem {len(guesswhat)} letras\")\n",
        "    guesswhat = input(\"Tente acertar a palavra: \")\n",
        "  else:\n",
        "    break\n",
        "letras_guesswhat = list(guesswhat)\n",
        "letras_reposta = list(palavra)\n",
        "letras = ['_','_','_','_','_']\n",
        "for i in range(0, 5):\n",
        "  if letras_guesswhat[i] == letras_reposta[i]:\n",
        "    letras[i]=(letras_guesswhat[i])\n",
        "    print(letras)\n",
