        "palavrinha =  [\"afeto\", \"algoz\", \"amigo\", \"âmago\", \"anexo\", \"aquém\", \"assim\", \"audaz\",\"cerne\", \"dengo\", \"desde\", \"então\", \"etnia\", \"ética\", \"expor\", \"êxito\",\"fazer\", \"fosse\", \"fútil\", \"haver\", \"honra\", \"ícone\", \"ideia\", \"inato\",\"justo\", \"lapso\", \"mexer\", \"moral\", \"muito\", \"mútua\", \"negro\", \"nobre\",\"porém\", \"plena\", \"poder\", \"quiçá\", \"razão\", \"sagaz\", \"sanar\", \"seção\",\"senso\", \"sonho\", \"sobre\", \"sutil\", \"tange\", \"tempo\", \"tênue\", \"termo\",\"torpe\", \"vigor\", \"égide\"]\n",
